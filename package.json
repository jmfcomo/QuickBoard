{
  "name": "quickboard",
  "version": "0.1.6",
  "description": "A storyboarding tool",
  "author": {
    "name": "QuickBoard Team",
    "email": "sav@savannah.lol"
  },
  "homepage": "https://github.com/jmfcomo/QuickBoard",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmfcomo/QuickBoard.git"
  },
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:mobile": "ng build --configuration mobile",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "npm run build && electron electron-main.js",
    "electron:dev": "ng build --watch & wait-on dist/index.html && electron electron-main.js",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --windows",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "cap:init": "cap init",
    "cap:sync": "npm run build:mobile && cap sync",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "cap:build:android": "npm run build:mobile && cap sync android && cd android && ./gradlew assembleRelease",
    "cap:build:ios": "npm run build:mobile && cap sync ios",
    "lint": "ng lint",
    "postinstall": "node patch-literallycanvas.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.1",
  "main": "electron-main.js",
  "build": {
    "appId": "com.quickboard.app",
    "productName": "QuickBoard",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "src/electron/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QuickBoard"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility",
      "artifactName": "${name}-${version}.${ext}"
    }
  },
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@editorjs/editorjs": "^2.31.1",
    "@editorjs/header": "^2.8.8",
    "@editorjs/list": "^2.0.9",
    "@editorjs/paragraph": "^2.11.7",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@fortawesome/fontawesome-free": "^7.2.0",
    "@ngrx/signals": "^21.0.1",
    "astral-regex": "^2.0.0",
    "jspdf": "^4.0.0",
    "jszip": "^3.10.1",
    "literallycanvas": "^0.5.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rxjs": "~7.8.0",
    "tone": "^15.1.22",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.0",
    "@capacitor/android": "^6.2.0",
    "@capacitor/cli": "^6.2.0",
    "@capacitor/core": "^6.2.0",
    "@capacitor/ios": "^6.2.0",
    "@types/node": "^25.2.0",
    "angular-eslint": "21.1.0",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.47.0",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.3"
  }
}
